#!/usr/bin/env bash
{{ if (eq .chezmoi.os "darwin") }}
# Required parameters:
# @raycast.schemaVersion 1
# @raycast.title Change theme
# @raycast.mode silent

# Optional parameters:
# @raycast.icon ðŸŒ“
