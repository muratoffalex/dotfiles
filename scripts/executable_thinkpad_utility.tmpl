IOIO="{{ .chezmoi.homeDir }}/.local/bin/ioio -s ThinkVPC"

MODE=$1
ACTION=$2

case $MODE in
  1|cm)
    change_conservation_mode $ACTION
    ;;
  2|fdm)
    change_force_discharge_mode $ACTION
    ;;
  *)
    echo "Invalid mode"
    ;;
esac
